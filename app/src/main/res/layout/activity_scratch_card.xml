<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ScratchCardActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">
<!--
        <com.startapp.sdk.ads.banner.Mrec
            android:id="@+id/startAppMrec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />-->

        <RelativeLayout
            android:id="@+id/rr"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="24dp" />


            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_above="@id/tv_number"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:gravity="center"
                android:src="@drawable/congrats_cup"
                android:text=""
                android:textColor="@color/white"
                android:textSize="24dp" />
        </RelativeLayout>

        <com.anupkumarpanwar.scratchview.ScratchView
            android:id="@+id/scratch_view"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="300dp"
            app:overlay_height="300dp"
            app:overlay_image="@drawable/scratch_card"
            app:overlay_width="300dp"
            app:tile_mode="CLAMP" />

        <com.startapp.sdk.ads.banner.Mrec
            android:id="@+id/startAppMrec1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"/>
        <com.startapp.sdk.ads.banner.Mrec
            android:id="@+id/startAppMrec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"/>

    </FrameLayout>


